<%= form_for @expected_event, html: { class: "form-horizontal" } do |f| %>
  <% if @expected_event.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@expected_event.errors.count, "error") %> prohibited this expected_event from being saved:</h2>

      <ul>
      <% @expected_event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <h4>Incoming Event Matching</h4>
    <div class="line-separator"></div>

    <div class="row">

      <div class="span6">
        <%= f.label :title, "Watch incoming event with name:", :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>

      <div class="span1">
        <h5>OR</h5>
      </div>

      <div class="span5">
        <label for="available_incoming_event_titles" class="control-label">Choose available</label>
        <div class="controls">
          <%= select_tag :available_incoming_event_titles, options_for_select(IncomingEvent.select('DISTINCT title').order('title').map(&:title)), include_blank: true %>
        </div>
      </div>

    </div> 
  </div>

  <div class="control-group">
    <h4><%= RemoteSide.model_name.human %></h4>
    <div class="line-separator"></div>
    <div class="control-group">
      <%= f.label :remote_side, "Watch incoming coming from:", :class => "control-label" %>
      <div class="controls">
        <%= f.select :remote_side_id, RemoteSide.all.map{|site| [site.name, site.id] }, prompt: '<Select One>' %>
      </div>
    </div> 
  </div>


  <div class="control-group">
    <h4>Select Frequency</h4>
    <div class="line-separator"></div>
    <div class="row">
      <div class="control-group span3">
        <h5>Weekly</h5>
        <button id="toggle_weekday_selection">Toggle all</button>
      </div>
    </div>

    <div class="control-group weekday-selection">
      <% 0.upto(6).each do |n| %>
        <label class="checkbox inline">
          <%= f.check_box "weekday_#{n}" %> <%= Date::DAYNAMES[n] %>
        </label>
      <% end %>
    </div>

    <div class="control-group span12 explanation">
      <em>(If no weekdays are checked, the event will be considered inactive)</em>
    </div>

    <div class="row">
      <div class="span3">
        <h5>Monthly</h5>
        <div class="control-group">
          <%= f.label :day_of_month, class: 'control-label' %>
          <div class="controls">
            <%= f.select :day_of_month, (1..31), include_blank: true %>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="control-group">
    <h4>Select Alarms</h4>
    <div class="line-separator"></div>
    <div class="row">
      <div class="span1"></div>
      <div class="span5">
        <div class="control-group">
          <%= select_tag "expected_event[alarm_ids][]", options_for_select(Alarm.all.map{|a| [a.title, a.id]}, f.object.alarms.map(&:id)), multiple: true %>
        </div>
      </div>
    </div>
  </div>


  <div class="control-group">
    <h4>Select Notification Type</h4>
    <div class="line-separator"></div>
    <div class="row">
      <div class="span1"></div>
      <div class="span5">
        <div class="control-group">
          <label class="radio">
            <%= f.radio_button :matching_direction, 'backward' %>
            Send an alarm when event is <strong>not</strong> found
          </label>
        </div>
      </div>
      <div class="span6">
        <div class="control-group">
          <label class="radio">
            <%= f.radio_button :matching_direction, 'forward' %>
            Send an alarm when event is found
          </label>
        </div>
      </div>
    </div>
  </div>


  <div class="control-group">
    <h4>Final Hour</h4>
    <div class="line-separator"></div>
    <div class="row">
      <div class="span6">
        <div class="control-group">
          <%= f.label :final_hour, :class => "control-label" %>
          <div class="controls">
            <%= f.select :final_hour, (1..24) %>
          </div>
        </div>
      </div>
      <div class="span6 explanation">
        <div class="control-group">
          <em>(Denotes the latest possible hour the event is expected. Only required for backward matching events.)</em>
        </div>
      </div>
    </div>
  </div>


  <div class="control-group">
    <h4>Select Dates</h4>
    <div class="line-separator"></div>
    <div class="control-group span6">
      <%= f.label "Start Date", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :started_at %>
      </div>
    </div>

    <div class="control-group span6">
      <%= f.label "End Date", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :ended_at %>
      </div>
    </div>
  </div>

    <div class="form-actions">
      <%= f.submit :class => "btn btn-custom-success pull-right" %>
    </div>

  <% end %>
