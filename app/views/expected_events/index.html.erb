<h1>Expected Events <i class="icon-calendar icon-large"></i></h1>

<table class="table table-striped" data-provides="rowlink">
  <thead>
    <tr>
      <th><%= sortable "title" %></th>
      <th>Alarms</th>
      <th><%= sortable "matching_direction", "Notification" %></th>
      <th>Activity</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @expected_events.each do |expected_event| %>
      <tr class ="success">
        <td class="title"><%= link_to expected_event.title, expected_event %></td>
        <td class="nolink alarms"><%= link_to "Alarms: #{expected_event.alarms.count}", expected_event_alarms_path(expected_event), class: 'btn btn-mini btn-custom-show' %></td>
        <td class="notification"><%= expected_event.event_matching_direction %></td>
        <td class="activity"><%= expected_event.activity_status.titleize %></td>
        <td class="nolink glyph"><%= link_to icon_pencil, edit_expected_event_path(expected_event) %></td>
        <td class="nolink glyph"><%= link_to icon_trash, expected_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expected event', new_expected_event_path , class: 'btn btn-custom-success' %>

<div class="pagination pagination-centered">
  <ul>
    <li class="disabled"><a href="#">&laquo;</a></li>
    <li class="active"><a href="#">1</a></li>
  </ul>
</div>

