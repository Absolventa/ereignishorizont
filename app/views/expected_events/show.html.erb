<p id="notice"><%= notice %></p>

<h1>Your Event</h1>

<p>
  <strong>Title:</strong>
  <%= @expected_event.title %>
</p>

<p>
	<strong>Selected Weekday(s): </strong>
	<% if @expected_event.weekday_0.present? %>
		Monday
	<% end %>
	<% if @expected_event.weekday_1.present? %>
		Tuesday
	<% end %>
		<% if @expected_event.weekday_2.present? %>
		Wednesday
	<% end %>
	<% if @expected_event.weekday_3.present? %>
		Thursday
	<% end %>
	<% if @expected_event.weekday_4.present? %>
		Friday
	<% end %>
	<% if @expected_event.weekday_5.present? %>
		Saturday
	<% end %>
	<% if @expected_event.weekday_6.present? %>
		Sunday
	<% end %>
</p>

<p>
	<strong>Matching Direction:</strong>
		<% if @expected_event.matching_direction == true %>
			Forward
		<% end %>
		<% if @expected_event.matching_direction == false %>
			Backward
		<% end %>
</p>

<p>
	<strong>Selected Dates</strong>
		<%= @expected_event.activity_status.titleize %>
</p>

<%= link_to 'Edit', edit_expected_event_path(@expected_event) %> |
<%= link_to 'Back', expected_events_path, class: "btn btn-custom" %>
