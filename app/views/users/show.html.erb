<h1>Profile</h1>

<div class="row">
  <div class="span3"></div>
  <div class="span6 event-description">
    <dl class="dl-horizontal">
      <dt><strong>Email:</strong></dt>
      <dd><%= @user.email %></dd>
      <dt><strong>Time zone:</strong></dt>
      <dd><%= @user.time_zone %></dd>
    </dl>
  </div>
  <div class="span3"></div>
</div>

<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-custom-success"%>
<%= link_to 'Back', users_path, class: "btn btn-custom-back" %>
