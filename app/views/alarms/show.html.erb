<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">x</a>
      <%= msg  %>
    </div>
  <% end %>
</div>

<div class="row">

	<div class="span1"></div>

		<div class="span10 event-description">
			<table class="table table-striped">
				<tr>
					<td><strong>Title:</strong></td>
					<td><%= @alarm.title %></td>
				</tr>
				<tr>
					<td><strong>Expected Event:</strong></td>
					<td><%= @alarm.expected_event.title if @alarm.expected_event %></td>
				</tr>
				<tr>
					<td><strong>Action:</strong></td>
					<td><%= @alarm.action %></td>
				</tr>
				<tr>
					<td><strong>Message:</strong></td>
					<td><%= @alarm.message %></td>
				</tr>
				<tr>
					<td><strong>Recipient Email:</strong></td>
					<td><%= @alarm.recipient_email %></td>
				</tr>
			</table>
		</div>

		<div class="span1"></div>

	</div>

<%= link_to 'Edit', edit_expected_event_alarm_path(@expected_event, @alarm), class: 'btn btn-custom-success'%>
<%= link_to 'Back', expected_event_alarms_path, class: 'btn btn-custom-back' %>