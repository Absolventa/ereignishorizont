<div class="row">

  <div class="span1"></div>

  <div class="span10 event-description">
    <table class="table table-striped">
      <tr>
        <th>Title:</th>
        <td><%= @incoming_event.title %></td>
      </tr>
      <tr>
        <th><%= IncomingEvent.human_attribute_name(:content) %></th>
        <td><%= @incoming_event.content %></td>
      </tr>
      <tr>
        <th>Remote Side:</th>
        <td>
          <% if @incoming_event.remote_side %>
            <%= link_to @incoming_event.remote_side.name, @incoming_event.remote_side %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>

  <div class="span1"></div>

</div>

<%= link_to 'Edit', edit_incoming_event_path(@incoming_event), class: "btn btn-custom-success" %>
<%= link_to 'Back', incoming_events_path, class: "btn btn-custom-back" %>
